---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Oscar Herrera | Error 404">
  <div class="grid h-screen px-4 bg-black place-content-center">
    <div class="text-center">
      <h1 class="font-black text-primary-200 text-9xl">404</h1>

      <p class="text-2xl font-bold tracking-tight text-primary-900 sm:text-4xl">
        Uh-oh!
      </p>

      <p class="mt-4 text-primary-500">We can't find that page.</p>

      <a
        href="#"
        class="inline-block px-5 py-3 mt-6 text-sm font-medium text-white bg-primary-600 rounded hover:bg-primary-700 focus:outline-none focus:ring"
      >
        Go Back Home
      </a>
    </div>
  </div>
</Layout>
