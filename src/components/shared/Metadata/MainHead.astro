---
import { SEO } from "astro-seo";

import { ViewTransitions } from "astro:transitions";
import "./styles/globas.css";
import { useTranslations } from "@/i18n/utils";
interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const t = useTranslations({ url: Astro.url });
const { title = t("meta.title"), description = t("meta.description") } =
  Astro.props;
---

<meta charset="UTF-8" />
<SEO
  title={title}
  description={description}
  openGraph={{
    basic: {
      title,
      type: "image/svg+xml",
      image: "https://oscarherrera.tech/favicon.svg",
    },
  }}
  twitter={{
    creator: "@osedhelu12",
  }}
  extend={{
    link: [{ rel: "icon", type: "image/svg+xml", href: "/favicon.svg" }],
    meta: [
      {
        name: "twitter:image",
        content: "https://oscarherrera.tech/favicon.svg",
      },
      { name: "twitter:title", content: title },
      { name: "twitter:description", content: description },
    ],
  }}
/>
<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#000000" />
<title>{title}</title>

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<ViewTransitions />
<link
  href="https://fonts.googleapis.com/css2?family=Aldrich&family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap"
  rel="stylesheet"
/>
