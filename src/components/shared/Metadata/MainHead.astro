---
import { ViewTransitions } from "astro:transitions";
import "./styles/globas.css";
interface Props {
  title?: string | undefined;
  description?: string | undefined;
}

const {
  title = "Oscar Herrera: Personal Site",
  description = "The personal site of Oscar Herrera",
} = Astro.props;
---

<meta charset="UTF-8" />

<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="theme-color" content="#000000" />
<title>{title}</title>

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<ViewTransitions />
<link
  href="https://fonts.googleapis.com/css2?family=Aldrich&family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap"
  rel="stylesheet"
/>
